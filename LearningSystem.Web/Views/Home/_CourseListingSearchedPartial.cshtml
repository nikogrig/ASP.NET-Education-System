@model IEnumerable<CourseSearchServiceModel>

        <div class="row home-page">
            @foreach (var course in Model)
            {
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title text-center">
                                <a asp-area="Modules"
                                   asp-controller="Courses"
                                   asp-action="Details"
                                   asp-route-courseId="@course.Id"
                                   asp-route-name="@course.Name.ToFriendlyUrl()">@course.Name</a>
                            </h3>
                        </div>
                        <div class="panel-body">
                            <img src="http://thecatapi.com/api/images/get?format=src&type=gif&guid=@(Guid.NewGuid())" class="img-responsive" />
                            <p class="text-center">@course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()</p>
                        </div>
                    </div>
                </div>
            }
        </div>
